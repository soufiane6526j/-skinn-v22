<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Activities.ShowMod">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgshowed"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/ttl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="tttttt"
            android:textColor="@color/textColor"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/descc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:text="tttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttt"
            android:textColor="@color/textColor"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Click button below to start download"
            android:textColor="@color/image_background"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="40dp"
            android:background="#FFEB3B"
            android:text="Download"
            android:textColor="@color/textColor"
            app:backgroundTint="#FFC107" />
    </LinearLayout>


     <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/ban2"
        android:orientation="horizontal"
        android:layout_height="60dp"
        android:layout_width="match_parent">
        <include layout="@layout/banner_layout"/>
    </LinearLayout>
</RelativeLayout>